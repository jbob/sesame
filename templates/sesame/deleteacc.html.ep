% layout 'default';

<form method="POST" class="form-horizontal">
  <p>If you are sure you want to delete your account type "YES" in the text
  field and submit</p>
  <div class="form-group form-group">
    <div class="col-sm-5">
      %= text_field 'confirmation', id => 'confirmation', class => 'form-control'
    </div>
  </div>
  <div class="form-group form-group">
    <div class="col-sm-5">
      %= submit_button 'Delete account', class => 'btn btn-default'
    </div>
  </div>
</form>
